{
    "compilerOptions": {
        "module": "commonjs",
        "baseUrl": ".",
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "resolveJsonModule": true,
        "target": "ES2019",
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
  }